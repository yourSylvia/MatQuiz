<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/pic12">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!--  Header Starts-->

        <!--  Header Ends -->

        <TextView
            android:id="@+id/goodjob"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="86dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Good job!"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="32dp"
            android:textStyle="bold" />

        <!-- result -->
        <TextView android:id="@+id/Correct_ans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/Wrong_ans"
            android:layout_alignParentStart="true" />

        <TextView android:id="@+id/Wrong_ans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/Give_up"
            android:layout_alignParentStart="true" />

        <TextView android:id="@+id/Give_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="19dp"
            android:layout_above="@+id/Accuracy"
            android:layout_alignParentStart="true" />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:gravity="center"
            android:id="@+id/Accuracy"
            android:layout_marginBottom="21dp"
            android:layout_above="@+id/Average_li"
            android:layout_alignParentStart="true" />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:gravity="center"
            android:id="@+id/Average_li"
            android:layout_marginBottom="17dp"
            android:layout_above="@+id/Average_qu"
            android:layout_alignParentStart="true" />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:gravity="center"
            android:id="@+id/Average_qu"
            android:layout_marginBottom="36dp"
            android:layout_above="@+id/btn_restart"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/btn_restart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:background="#66ffffff"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="restart" />

        <!-- Footer Start -->
        <!-- Footer Ends -->
    </RelativeLayout>
</ScrollView>
